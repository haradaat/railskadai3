<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
    <tr>
        <th>タイトル</th>
        <th>内容</th>
    </tr>
<% @blog2s.each do |blog2| %>
    <tr>
        <td><%= blog2.title %></td>
        <td><%= blog2.content %></td>
        <td><%= link_to '詳細を確認する', blog2_path(blog2.id) %></td>
        <td><%= link_to "ブログを編集する", edit_blog2_path(blog2.id) %></td>
        <td><%= link_to 'ブログを削除する', blog2_path(blog2.id), method: :delete,data: { confirm: '本当に削除してもいいですか？'}  %></td>
    </tr>
<% end %>
</table>
<br>
<%= link_to '新しくブログを投稿する',  new_blog2_path %>
<div>
<%= link_to 'DIVE INTO CODEのページへ', 'https://diveintocode.jp/'  %>
</div>
<%= link_to 'ブログ一覧画面に戻る', blog2s_path %>