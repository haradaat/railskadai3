<%= form_with(model: @blog2, local: true ,url: choose_new_or_edit ) do |form| %>
    <% if @blog2.errors.any? %>
      <div id="error_explanation">
        <h2><%= @blog2.errors.count %>件のエラーがあります。</h2>
        <ul>
        <% @blog2.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="blog2_title">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div class="blog2_title">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>
    <%= form.submit %>
  <% end %>
  <%= link_to "ブログ一覧画面にもどる", blog2s_path %>